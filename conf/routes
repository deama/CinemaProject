GET         /times                      controllers.TimesController.times

GET         /booking/:movieTitle        controllers.BookingController.bookingSubmit(movieTitle :String)
GET         /payment/:movieTitle        controllers.PaymentController.paymentSubmit(movieTitle :String)

GET         /createBooking              controllers.DBManager.createBooking(movieTitle :String, screening :String, userName :String, adults :Int, children :Int, concession :Int)
GET         /createPayment              controllers.DBManager.createPayment(name :String, cardNumber :Int, expDate :String, securityCode :Int, movieTitle :String)
GET         /getAllReviews              controllers.DBManager.getAllReviews()
GET         /createReview               controllers.DBManager.createReview(name :String, movieTitle :String, rating :String, review :String)

